@model IEnumerable<HealthcarePortal.Core.Models.Patient>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Patients</h2>
        </div>
    </div>


    <br>

    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Birth Date
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Height
                    </th>
                    <th>
                        Weight
                    </th>
                    <th>
                        Token
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model)
                {
                    <tr>
                        <td>@patient.Id</td>
                        <td>@patient.Name</td>
                        <td>@patient.Address</td>
                        <td>@patient.BirthDate</td>
                        <td>@patient.Phone</td>
                        <td>@patient.Height</td>
                        <td>@patient.Weight</td>
                        <td>@patient.Token</td>
                        <td>
                            <div>
                                <a asp-controller="Patients" asp-action="Edit" asp-route-Id="@patient.Id" class="btn btn-primary">Update</a>
                                <a asp-controller="Patients" data-bs-toggle="modal" data-bs-target="#patient-@patient.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @foreach (var patient in Model)
        {
            <div class="modal fade" id="patient-@patient.Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">@patient.Name</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this patient?
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-secondary" data-bs-dismiss="modal">Close</a>
                            <a asp-route-Id="@patient.Id" asp-controller="Patients" asp-action="DeletePost" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    }
    else
    {
        <p>No items created yet.</p>
    }
    <div>
        <a asp-controller="Patients" asp-action="Add" class="btn btn-primary">Add patient</a>
    </div>
</div>
